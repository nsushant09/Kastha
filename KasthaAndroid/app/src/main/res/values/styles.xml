<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WhiteMaterialButtonStyle" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/dp_56</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/dp_12</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/outfit_regular</item>
    </style>

    <style name="PrimaryMaterialButtonStyle" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/dp_56</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="cornerRadius">@dimen/dp_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/outfit_regular</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopStart">@dimen/dp_12</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dp_12</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dp_12</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dp_12</item>
        <item name="android:layout_marginStart">@dimen/dp_24</item>
        <item name="android:layout_marginEnd">@dimen/dp_24</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="boxStrokeWidth">@dimen/dp_1</item>
    </style>

    <style name="ToggleOutlinedButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@drawable/toggle_group_text_color</item>
        <item name="backgroundTint">@drawable/toggle_group_bg</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="fontFamily">@font/titillium_regular</item>d
    </style>

    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">?attr/colorOnSurface</item>
        <item name="android:background">?attr/material3Surface</item>
        <item name="itemActiveIndicatorStyle">@style/BottomNavigationActiveIndicator</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextAppearanceStyle</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextAppearanceStyle</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="defaultMarginsEnabled">false</item>
        <item name="android:layout_height">72dp</item>
    </style>

    <style name="BottomNavigationTextAppearanceStyle">
        <item name="fontFamily">@font/titillium_regular</item>
    </style>

    <style name="CustomTextAppearanceTitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/titillium_regular</item>
    </style>

    <style name="BottomNavigationActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorBottomNavigationIndicator</item>
    </style>

    <style name="Widget.App.Button.IconOnly" parent="Widget.Material3.Button.IconButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingLeft">@dimen/dp_12</item>
        <item name="android:paddingRight">@dimen/dp_12</item>
        <item name="rippleColor">?attr/colorSurface</item>
    </style>

    <style name="CardsTitleTextAppearance">
        <item name="fontFamily">@font/outfit_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingMultiplier">0.8</item>
    </style>

    <style name="CategoryCardShapeAppearanceOverlay" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/dp_64</item>
        <item name="cornerSizeTopLeft">@dimen/dp_16</item>
        <item name="cornerSizeBottomLeft">@dimen/dp_16</item>
        <item name="cornerSizeBottomRight">@dimen/dp_64</item>
        <item name="contentPadding">@dimen/dp_0</item>
    </style>

</resources>