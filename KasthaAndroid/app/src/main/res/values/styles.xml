<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WhiteMaterialButtonStyle" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/dp_56</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/dp_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/outfit_regular</item>
    </style>

    <style name="PrimaryMaterialButtonStyle" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/dp_56</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="cornerRadius">@dimen/dp_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/outfit_regular</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopStart">@dimen/dp_16</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dp_16</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dp_16</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dp_16</item>
        <item name="android:layout_marginStart">@dimen/dp_24</item>
        <item name="android:layout_marginEnd">@dimen/dp_24</item>
        <item name="boxStrokeWidth">@dimen/dp_2</item>
        <item name="fontFamily">@font/outfit_regular</item>
    </style>
</resources>