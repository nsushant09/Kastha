<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_96"
        android:layout_marginBottom="@dimen/dp_16">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cvProductImage"
            android:layout_width="@dimen/dp_96"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/dp_16"
            app:cardElevation="@dimen/dp_1"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/ivProductImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/image_view"
                android:scaleType="fitCenter"

                tools:src="@drawable/living_room_pana" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_right_rounded"
            android:divider="@drawable/divider_2_dp"
            android:orientation="vertical"
            android:padding="@dimen/dp_8"
            android:showDividers="middle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toEndOf="@id/cvProductImage"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvProductTitle"
                style="@style/CardsTitleTextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:maxLines="2"
                tools:text="Wooden Sofa" />

            <LinearLayout
                android:id="@+id/layoutRatingArContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_4_dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:showDividers="middle">

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:contentDescription="@string/image_view"
                    android:src="@drawable/ic_star_filled"
                    app:tint="?attr/surface_grey" />

                <TextView
                    android:id="@+id/tvProductRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/titillium_regular"
                    android:maxLines="1"
                    android:textColor="?attr/surface_grey"
                    android:textSize="12sp"
                    tools:text="5.0" />

                <include
                    android:id="@+id/layoutArFeatured"
                    layout="@layout/layout_ar_featured" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/titillium_regular"
                android:maxLines="1"
                tools:text="Rs.124.8" />

        </LinearLayout>

        <include
            android:id="@+id/layoutItemCount"
            layout="@layout/layout_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>