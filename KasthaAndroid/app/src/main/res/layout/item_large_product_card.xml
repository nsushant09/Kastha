<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp_16"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvProductImage"
                android:layout_width="match_parent"
                android:layout_height="212dp"
                app:cardCornerRadius="@dimen/dp_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/ivProductImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/image_view"
                    android:scaleType="fitCenter"

                    tools:src="@drawable/living_room_pana" />

            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:src="@drawable/ic_heart"
                android:layout_margin="@dimen/dp_6"
                android:padding="@dimen/dp_4"
                android:background="@drawable/bg_rounded"
                app:tint="?attr/colorOnSurface"
                app:layout_constraintLeft_toLeftOf="@id/cvProductImage"
                app:layout_constraintTop_toTopOf="@id/cvProductImage"
                android:contentDescription="@string/image_view" />

            <ImageView
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_36"
                android:src="@drawable/ic_cart_plus"
                android:padding="@dimen/dp_8"
                app:tint="?attr/colorOnSurface"
                android:background="@drawable/bg_diagonal_rounded"
                app:layout_constraintRight_toRightOf="@id/cvProductImage"
                app:layout_constraintBottom_toBottomOf="@id/cvProductImage"
                android:contentDescription="@string/image_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvProductTitle"
            style="@style/CardsTitleTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:maxLines="2"
            tools:text="Wooden Sofa that is very very comfornatable" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/titillium_regular"
                android:maxLines="1"
                android:textSize="14sp"
                tools:ignore="RelativeOverlap"
                tools:text="$124.8" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvArFeatured"
                android:layout_width="@dimen/dp_48"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                app:strokeColor="?attr/colorPrimary"
                tools:ignore="RelativeOverlap">

                <TextView
                    android:id="@+id/tvArFeatured"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/titillium_regular"

                    android:paddingHorizontal="@dimen/dp_8"
                    android:text="@string/ar"
                    android:textAlignment="center"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="12sp" />

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

    </LinearLayout>

</layout>